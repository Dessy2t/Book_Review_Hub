
<h1>Book Index</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.reviews.average(:rating) || 'None' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add a new book', new_book_path %>