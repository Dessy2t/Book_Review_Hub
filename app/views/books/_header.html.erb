<header class="p-1 text-bg-dark" >
    <div class="container">
        <div class= "d-flex flex wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
              <svg class= "bi me-2" width="30" height="22" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <%= link_to "Home", root_path, class: "nav-link px-2 text-secondary"%>
                <%= link_to "Books", books_path, class: "nav-link px-2 text-white"%>    
            </ul>
    
            <%= form_with url:"/books", class: "d-flex align-items-center ", method: :get do |form|%>
            <%= form.label :query, "Search for", placeholder: "search book by title or ISBN", class: "fs-5 text-nowrap"%>
            <%= form.search_field :query, value:params[:query], placeholder: "Search by title or ISBN", class: "py-2 bg-dark"%>
            <%= form.submit "Search", class: "btn btn-primary me-2 text-bg-dark"%>
            <%end%>

            <div class="text-end">
                <% if user_signed_in? %>
                    <%= link_to current_user.email, edit_user_registration_path, class: "me-2 text-light"%>           
                    <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-danger" %>
                <% else %>
                    <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-light me-2 "%>
                    <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-warning" %> 
                <% end %>
             </div>
        </div>
    </div>
</header>